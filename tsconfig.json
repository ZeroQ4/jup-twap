{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "declarationMap": true,
    "downlevelIteration": true,
    "rootDir": "./src/"
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["node_modules", "lib"]
}
